<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <Spinner
        android:id="@+id/spinnerDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seleccione DNI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etConcept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Concepto"
        app:layout_constraintTop_toBottomOf="@id/spinnerDni" />

    <EditText
        android:id="@+id/etTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/etConcept" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@id/etTotal" />

</androidx.constraintlayout.widget.ConstraintLayout>